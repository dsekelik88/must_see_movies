<!-- Form review start -->
<%= form_with(model: @review, local: true) do |f| %>
<!-- Form review end -->

  <!-- Label and input for review_description start -->
  <div class="form-group">
    <%= f.label :review_description %>
    <!-- Input for review_description start -->
    <%= f.text_area :review_description, rows: "3", class: "form-control" %>
    <!-- Input for review_description end -->
  </div>
  <!-- Label and input for review_description end -->

  <!-- Label and input for poster_id start -->
  <div class="form-group">
    <%= f.label :poster_id %>

    <!-- Input for poster_id start -->
    <%= f.collection_select :poster_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for poster_id end -->
  </div>
  <!-- Label and input for poster_id end -->

  <!-- Label and input for number_of_stars start -->
  <div class="form-group">
    <%= f.label :number_of_stars %>

    <!-- Input for number_of_stars start -->
    <%= f.text_field :number_of_stars, class: "form-control" %>
    <!-- Input for number_of_stars end -->
  </div>
  <!-- Label and input for number_of_stars end -->

  <!-- Label and input for movie_id start -->
  <!-- Input for movie_id start -->
  <%= f.hidden_field :movie_id, value: @movie.id %>
  <!-- Input for movie_id end -->
  <!-- Label and input for movie_id end -->

  <%= f.submit "Create review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
