<div class="card mb-3">
  <h2 class="card-header h4">
    Review #<%= review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Review description</dt>
      <!-- Display review_description start -->
      <dd><%= review.review_description %></dd>
      <!-- Display review_description end -->

      <dt>Poster</dt>
      <!-- Display poster_id start -->
      <dd>
        <% if @review.poster.present? %>
          <%= link_to review.poster, review.poster %>
        <% end %>
      </dd>
      <!-- Display poster_id end -->

      <dt>Number of stars</dt>
      <!-- Display number_of_stars start -->
      <dd><%= review.number_of_stars %></dd>
      <!-- Display number_of_stars end -->

      <dt>Movie</dt>
      <!-- Display movie_id start -->
      <dd>
        <% if @review.movie.present? %>
          <%= link_to review.movie, review.movie %>
        <% end %>
      </dd>
      <!-- Display movie_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link review start -->
      <div class="col">
        <%= link_to edit_review_url(review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link review end -->

      <!-- Delete link review start -->
      <div class="col">
        <%= link_to review, method: :delete, data: { confirm: "Do you really want to delete this review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link review end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(review.updated_at) %> ago
  </div>
</div>
